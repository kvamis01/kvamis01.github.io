html,body{height:100%;margin:0;display:flex;flex-direction:column}#main{flex-grow:1}footer{max-width:fit-content;margin-left:auto;margin-right:auto;width:100%;text-align:center}footer ul li{float:left;list-style:none;margin-right:15px}.card-row{display:flex;flex-wrap:wrap;gap:1rem;margin-bottom:2rem}.card{flex:1 1 30%;text-align:center}.card img{max-width:100%;height:auto;border-radius:8px}@media(max-width:768px){.card{flex:1 1 100%}}